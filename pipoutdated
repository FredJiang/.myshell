#!/bin/bash

set -e

           /usr/local/bin/pip          --version
           /usr/local/bin/pip     list --outdated --format=freeze
         # /usr/local/bin/pip     list --outdated --format=freeze | sed 's/==.*$//g' | xargs /usr/local/bin/pip    install --upgrade --user
# pip_cmd="/usr/local/bin/pip"    && pip_upgrade_outdated --pip_cmd "${pip_cmd}"
echo "------------------------------------------------------------------------"

           /usr/local/bin/pip2         --version
           /usr/local/bin/pip2    list --outdated --format=freeze
